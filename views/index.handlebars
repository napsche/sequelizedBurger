<div class="wrapper">
    <div id="create-burger">
        <form action="/" method="POST">
            <input id="burger-name" type="text" name="burger_name" placeholder="Add a burger!">
            <button id="submit-btn" type="submit">Add-Da-Burger!</button>
        </form>
    </div>

    <section id="burgers-container">
        <div id="burgers-available">
            <h2>Burgers Available:</h2>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="burger">
                        <form class="devour-burger-form" action="/{{this.id}}?_method=PUT" method="POST">
                            <button class="eat-btn">EAT-DA-BURGER!</button>
                        </form>
                            {{burger_name}} <span>#{{id}}</span>
                    </div>
                {{/unless}}
            {{/each}}
        </div>
        <div id="burgers-devoured">
            <h2>Burgers Devoured:</h2>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="burger">
                        {{burger_name}} <span>#{{id}}</span>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </section>
</div>